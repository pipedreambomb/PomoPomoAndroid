<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.vngrs.android.pomodoro">

  <uses-permission android:name="android.permission.WAKE_LOCK" />
  <uses-feature android:name="android.hardware.type.watch" />

  <application
    android:name=".wear.App"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:theme="@style/Theme.Pomodoro">

    <activity
      android:name=".wear.ui.PomodoroWearBroadcastActivity"
      android:label="@string/start_working">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity
      android:name=".wear.ui.PomodoroNotificationActivity"
      android:allowEmbedded="true"
      android:exported="true"
      android:taskAffinity=""
      android:theme="@android:style/Theme.DeviceDefault.Light" />

    <receiver
      android:name=".wear.receiver.PomodoroNotificationReceiver"
      android:enabled="true"
      android:exported="false">
      <intent-filter>
        <action android:name="com.vngrs.android.pomodoro.action.START" />
        <action android:name="com.vngrs.android.pomodoro.action.STOP" />
        <action android:name="com.vngrs.android.pomodoro.action.PAUSE" />
        <action android:name="com.vngrs.android.pomodoro.action.RESUME" />
        <action android:name="com.vngrs.android.pomodoro.action.SKIP" />
        <action android:name="com.vngrs.android.pomodoro.action.RESET" />
        <action android:name="com.vngrs.android.pomodoro.action.DISMISS" />
        <action android:name="com.vngrs.android.pomodoro.action.UPDATE" />
        <action android:name="com.vngrs.android.pomodoro.action.ALARM" />
      </intent-filter>
    </receiver>

    <service android:name=".wear.service.PomodoroWearableListenerService">
      <intent-filter>
        <action android:name="com.google.android.gms.wearable.BIND_LISTENER" />
      </intent-filter>
    </service>

    <service android:name=".wear.service.PomodoroNotificationService" />
  </application>

</manifest>
